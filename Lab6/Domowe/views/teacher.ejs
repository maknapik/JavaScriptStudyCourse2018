<!DOCTYPE html>
<html>
<head>
    <% include head.ejs %>
</head>
<body>
    <% include header.ejs %>
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2>Name</h2>
                </div>
                <div class="panel-body">
                    <p><%= teacher.name%></p>
                    <p><%= teacher.surname%></p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2>Students</h2>
                </div>
                <div class="panel-body">
                    <% students.forEach(function(student) { %>
                        <div style="border: 1px solid; margin-bottom: 2px; padding: 5px;">
                        <a href="/student/<%= student._id%>/"><%= student.name %> <%= student.surname %></a>
                        <% student.subjects.forEach(function(subject) { %>
                            <% if(subject.teacher.toString() === teacher._id.toString()) { %>
                                <p><b>Subject:</b> <%= subject.name %></p>
                            <% } %>
                        <% }) %>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2>Subjects</h2>
                </div>
                <div class="panel-body">
                    <% teacher.subjects.forEach(function(subject) { %>
                    <p><%= subject.name %></p>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
